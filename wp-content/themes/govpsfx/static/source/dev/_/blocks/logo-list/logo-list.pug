script.
	document.addEventListener('DOMContentLoaded', ()=>{
		var priceList = new Swiper('.logo-list__list', {
			slidesPerView: 3,
			slidesPerGroup: 3,
			spaceBetween: 30,
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
		}); 
	});