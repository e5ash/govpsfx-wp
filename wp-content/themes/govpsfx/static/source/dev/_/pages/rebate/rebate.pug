extends ../../templates/default
block vars
	-
		title = "РИБЕЙТ-КАЛЬКУЛЯТОР ROBOFOREX"
		breadcrumbs = [
			['Главная', 'index.html'],
			[title]
		]
block content
	.page.bg-wrap
		.case
			.page__head
				+breadcrumbs()
			.page__body.--sm
				+style('rebate', 'blocks')
				include ../../blocks/rebate/rebate
				+script('rebate', 'blocks')

				-
					needHelpTitle = 'Остались вопросы?'
					needHelpLinks = [
						['Как выбрать VPS-сервер для Форекс  →', ''],
						['Как подключиться к VPS-серверу через удаленный рабочий стол (RDP)  →', ''],
					]
				+style('need-help', 'blocks')
				include ../../blocks/need-help/need-help
				
		.page__bg-1.bg
			img(src="_/uploads/scheme-advisors-1.png" alt="")

		.page__bg-2.bg
			img(src="_/uploads/scheme-advisors-2.png" alt="")

		.page__bg-3.bg
			img(src="_/uploads/scheme-advisors-3.png" alt="")
	