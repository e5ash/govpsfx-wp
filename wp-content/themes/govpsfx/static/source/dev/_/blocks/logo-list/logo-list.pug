			.logo-list__list.swiper-wrapper
				mixin logo
					a.logo-list__item.swiper-slide(href="")
						img(src="https://govpsfx.com/wp-content/uploads/2019/11/instaforex-yllow-198x50.png" alt="")
				+logo
				+logo
				+logo
				+logo
				+logo
				+logo
				+logo
				+logo
				+logo
				+logo
				+logo
			.logo-list__controls.row
				.logo-list__all.link #[a(href="" alt="") перейти к форекс брокерам →]
				.logo-list__arrows.row
					.logo-list__arrow.swiper-button-prev.btn.arrow.--bg-yellow.--radius.--prev
