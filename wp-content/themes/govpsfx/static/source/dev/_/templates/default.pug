		//- meta(name="theme-color" content="#ffffff")
		title=title
	body
		.wrap
			link(rel="stylesheet" href="_/sys/css/style.css" + version)
			script(src="_/sys/js/common.js" + version)

			+style('header', 'blocks')
			include ../blocks/header/header
			+script('header', 'blocks')
			
			main.main
				block content

			+style('footer', 'blocks')
			include ../blocks/footer/footer

			+style('modals', 'blocks')
			include ../blocks/modals/modals

			+script('input', 'components')
			+script('check', 'components')
			+script('select', 'components')
			+script('tabs', 'components')
			+script('popup', 'components')
			+script('slider', 'components')
			+script('tog', 'components')