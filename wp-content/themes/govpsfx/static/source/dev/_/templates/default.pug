include ../sys/pug/vars
doctype html
block vars
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		//- link(rel="apple-touch-icon" sizes="180x180" href="_/uploads/favicon/apple-touch-icon.png")
		//- link(rel="icon" type="image/png" sizes="32x32" href="_/uploads/favicon/favicon-32x32.png")
		//- link(rel="icon" type="image/png" sizes="16x16" href="_/uploads/favicon/favicon-16x16.png")
